<% NUM_PEOPLE = 23 %>
name: "LSTM"
layer {
  name: "gait"
  type: "HDF5Data"
  top: "data"
  top: "clip"
  <% for i in 1..NUM_PEOPLE %>top: "label<%= i %>"
  <% end %>
  include {
    phase: TRAIN
  }
  hdf5_data_param {
    source: "/home/jmlee/workspace/gaitIdentification/caffe-lstm/examples/lstm_sequence/gait-dataset/gait_train2.txt"
    batch_size: 200
  }
}
layer {
  name: "gait"
  type: "HDF5Data"
  top: "data"
  top: "clip"
  <% for i in 1..NUM_PEOPLE %>top: "label<%= i %>"
  <% end %>

  include {
    phase: TEST
  }
  hdf5_data_param {
    source: "/home/jmlee/workspace/gaitIdentification/caffe-lstm/examples/lstm_sequence/gait-dataset/gait_test.txt"
    batch_size: 200
  }
}
layer {
  name: "lstm1"
  type: "Lstm"
  bottom: "data"
  bottom: "clip"
  top: "lstm1"

  lstm_param {
    num_output: 100
    clipping_threshold: 0.1
    weight_filler {
      type: "gaussian"
      std: 0.1
    }
    bias_filler {
      type: "constant"
    }
  }
}
<% for i in 1..NUM_PEOPLE %>
layer {
name: "ip<%= i %>"
  type: "InnerProduct"
  bottom: "lstm1"
  top: "ip<%= i %>"

  inner_product_param {
    num_output: 2
    weight_filler {
      type: "gaussian"
      std: 0.1
    }
    bias_filler {
      type: "constant"
    }
  }
}
<% end %>
<% for i in 1..NUM_PEOPLE %>
layer {
  name: "loss"
  type: "SoftmaxWithLoss"
  bottom: "ip<%= i %>"
  bottom: "label<%= i %>"
  top: "loss"
  include: { phase: TRAIN }
}
<% end %>

